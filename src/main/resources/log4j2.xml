<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <MyJpa name="myJpaAppender" persistenceUnitName="loggingPersistenceUnit"
             entityClassName="com.test.logger.Log" />
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.test.logger.LoggerTest" level="debug">
            <AppenderRef ref="myJpaAppender"/>
        </Logger>
    </Loggers>
</Configuration>